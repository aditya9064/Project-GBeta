  margin: 0;
}

.operonai-detail-metrics {
  display: flex;
  gap: 12px;
}

.operonai-detail-metric-card {
  flex: 1;
  background: #f8f8fb;
  border-radius: 12px;
  padding: 16px;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.operonai-detail-metric-val {
  font-size: 22px;
  font-weight: 700;
  color: #1a1a2e;
}

.operonai-detail-metric-label {
  font-size: 12px;
  font-weight: 600;
  color: #9a9ab0;
  text-transform: uppercase;
