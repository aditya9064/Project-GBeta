rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // For now, allow all authenticated users
    // To restrict to specific testers, uncomment the allowlist function
    // and replace isAuthenticated() with isAllowedTester() below
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Allowlist of approved tester emails (uncomment to use)
    // function isAllowedTester() {
    //   return request.auth != null && 
    //     request.auth.token.email in [
    //       "your-email@gmail.com",
    //       "teammate1@gmail.com",
    //       "teammate2@gmail.com"
    //     ];
    // }
    
    // All collections require authentication
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
    }
    
    match /workspaces/{workspaceId} {
      allow read, write: if isAuthenticated();
    }
    
    match /workspaceMembers/{memberId} {
      allow read, write: if isAuthenticated();
    }
    
    match /events/{eventId} {
      allow read, write: if isAuthenticated();
    }
    
    match /eventParticipants/{participantId} {
      allow read, write: if isAuthenticated();
    }
    
    match /teams/{teamId} {
      allow read, write: if isAuthenticated();
    }
    
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }
    
    match /projects/{projectId} {
      allow read, write: if isAuthenticated();
    }
    
    match /goals/{goalId} {
      allow read, write: if isAuthenticated();
    }
    
    match /timesheets/{timesheetId} {
      allow read, write: if isAuthenticated();
    }
    
    match /workspaceInvitations/{invitationId} {
      allow read, write: if isAuthenticated();
    }
  }
}
